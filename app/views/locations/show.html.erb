<div class="page-header">
  <%= link_to trip_locations_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_trip_location_path(@trip, @location), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show location</h1>
</div>

<dl class="dl-horizontal">
  <dt>Latitude:</dt>
  <dd><%= @location.latitude %></dd>

  <dt>Longitude:</dt>
  <dd><%= @location.longitude %></dd>

  <dt>Address:</dt>
  <dd><%= @location.address %></dd>

  <dt>Activity:</dt>
  <dd><%= @location.activity %></dd>

</dl>
